import io.newm.shared.public.models.SortOption;

CREATE TABLE UserPreferences (
    userId TEXT NOT NULL PRIMARY KEY,
    sortOption TEXT AS SortOption NOT NULL DEFAULT 'TitleAscending',
    filterMaxDuration INTEGER NOT NULL DEFAULT 30
);

getPreferencesByUserId:
SELECT *
FROM UserPreferences
WHERE userId = ?;

insertUserPreferences:
INSERT INTO UserPreferences (
    userId,
    sortOption,
    filterMaxDuration
) VALUES (?, ?, ?);

deleteAll:
DELETE FROM UserPreferences;